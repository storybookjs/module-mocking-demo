{
  "private": true,
  "imports": {
    "#app/actions": {
      "storybook": "./app/actions.mock.ts",
      "default": "./app/actions.ts"
    },
    "#lib/session": {
      "storybook": "./lib/session.mock.ts",
      "default": "./lib/session.ts"
    },
    "#lib/db": {
      "storybook": "./lib/db.mock.ts",
      "default": "./lib/db.ts"
    },
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx"
    ]
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "prisma:setup": "dotenv -e .env.local prisma migrate dev && pnpm run generate-dmmf",
    "prisma:seed": "dotenv -e .env.local prisma db seed",
    "prisma:studio": "dotenv -e .env.local prisma studio",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:coverage": "test-storybook --coverage && DEBUG='istanbuljs' nyc report --reporter=text --reporter=lcov -t ./coverage/storybook --report-dir ./coverage/storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm run build-storybook --quiet && http-server storybook-static --port 6006 --silent\" \"wait-on http://127.0.0.1:6006/ && pnpm run test-storybook\"",
    "generate-dmmf": "tsx prisma/generate-dmmf.ts"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts && tsx ./prisma/generate-dmmf.ts"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cookie-signature-edge": "^1.0.7",
    "date-fns": "^3.6.0",
    "marked": "^1.2.9",
    "ms": "^2.1.3",
    "next": "^14.2.3",
    "oauth": "^0.10.0",
    "react": "^18",
    "react-dom": "^18",
    "sanitize-html": "^2.13.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.25",
    "@prisma/client": "^5.11.0",
    "@storybook/addon-actions": "^8.1.0",
    "@storybook/addon-coverage": "^1.0.3",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/addon-viewport": "^8.1.0",
    "@storybook/blocks": "^8.1.0",
    "@storybook/nextjs": "^8.1.0",
    "@storybook/react": "^8.1.0",
    "@storybook/test": "^8.1.0",
    "@storybook/test-runner": "^0.17.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "chromatic": "^11.3.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.0",
    "eslint-plugin-storybook": "^0.8.0",
    "http-server": "^14.1.1",
    "mockdate": "^3.0.5",
    "msw": "^2.2.14",
    "msw-storybook-addon": "^2.0.0",
    "nyc": "^15.1.0",
    "playwright": "^1.43.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "prisma-mock": "^0.10.2",
    "storybook": "^8.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
